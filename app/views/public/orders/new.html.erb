<h3>注文情報入力</h3>
<div class="order_info">
    <%= form_with(model: @order,url: confirm_public_orders_path, method: :get,local: true) do |f| %>
        <div class="row">
            <div class="col-xs-2 col-xs-offset-1">
                <h4>お届け先</h4>
            </div>
            <div class="col-xs-3 ">
                <div class="address">
                    <div class="address_button">
                        <%= f.radio_button :address_option, 0 %>
                        <%= f.label :address_option,"ご自身の住所"%>
                        <br>
                        <%= f.label :address_option,""+(current_user.address),{value: 0,style: "display: inline-block;"}%>
                    </div>
                </div>
            </div>
            <div class="col-xs-4">
                <div class="address_button">
                    <%= f.radio_button :address_option, 1 %>
                    <%= f.label :address_option,"新しいお届け先",{value: 1,style: "display: inline-block;"}%>
                </div>
                <%= f.text_field :postal_code ,placeholder:"郵便番号(ハイフンなし)",style:"margin:5px;" %>
                <%= f.text_field :address,:size=>"40",placeholder:"住所",style:"margin:5px;" %>
                <%= f.text_field :name,placeholder:"宛名",style:"margin:5px;" %>
            </div>
        </div>
        <br>
        <div class="payment">
            <div class="row">
                <div class="col-xs-2 col-xs-offset-1">
                    <h4>支払方法</h4>
                </div>
                <div class="col-xs-3 ">
                    <div class="payment">
                        <%= f.radio_button :payment_method, :"クレジット" %>
                        <%= f.label :payment_method,"クレジット",{style: "display: inline-block;"}%>
                    </div>
                </div>
                <div class="col-xs-3 ">
                    <p> <%= f.radio_button :payment_method, :"銀行振込" %>
                    <%= f.label :payment_method,"銀行振込",{style: "display: inline-block;"}%></p>
                </div>
                    <!--/script
                        type="text/javascript"
                        src="https://checkout.pay.jp/"
                        class="payjp-button"
                        data-key="<%= ENV["PAYJP_PUBLIC_KEY"] %>"
                        data-submit-text="入力確定"
                        data-partial="true">
                    </script-->
            </div>
        </div>
        <center>
            <%= f.submit "確認画面へ進む",class:"btn btn-primary",style:"margin:0 auto;"%>
        </center>
    <% end %>
</div>